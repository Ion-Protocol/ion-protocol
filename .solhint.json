{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "state-visibility": "off",
    "no-inline-assembly": "off",
    "one-contract-per-file": "off",
    "var-name-mixedcase": "off"
  }
}
